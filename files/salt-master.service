[Unit]
Description=The Salt Master Server
After=syslog.target network.target

[Service]
Type=notify
ExecStartPre=/rw/usrlocal/bin/bind-directories /rw/usrlocal/srv/salt:/srv/salt /rw/usrlocal/srv/pillar:/srv/pillar /rw/usrlocal/etc/salt:/etc/salt
ExecStart=/usr/bin/salt-master

[Install]
WantedBy=multi-user.target
